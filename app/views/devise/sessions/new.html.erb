<% content_for :styles do %>
    <%= stylesheet_link_tag 'devise/login' %>
<% end %>
<% content_for :script do %>
    <script src="/uploads/script/valid_input_form.js" type="text/javascript"></script>
<% end %>
<div class="content content-block__normal background normal_align">
  <div class="header_block">
    <div class="title">Авторизация</div>
    <hr/>
  </div>
  <div class="form_auth">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "form_validate"}) do |f| %>
        <div class="login">
          <div class="title_input">Логин:</div>
          <%= f.email_field :email, autofocus: true, :class => "form_input" %>
        </div>

        <div class="password">
          <div class="title_input">Пароль:</div>
          <%= f.password_field :password, autocomplete: "off", :class => "form_input" %>
        </div>
        <div class="action_btn">
          <div class="left_action">
            <% if devise_mapping.rememberable? -%>
                <div class="remember">
                  <%= f.check_box :remember_me %>
                  <%= f.label "Запомнить" %>
                </div>
            <% end %>
            <div class="link_rechange_pass">
              <%= link_to "Забыли пароль?", new_password_path(resource_name) %>
            </div>
            <div class="link_registration">
              <%= link_to "Регистрация", new_registration_path(resource_name) %>
            </div>
          </div>
          <div class="right_action">
            <div class="submit_form disabled">Вход</div>
            <%= f.submit "", :style => "display:none;", :class => "no_valid" %>
          </div>
        </div>
    <% end %>
  </div>
</div>